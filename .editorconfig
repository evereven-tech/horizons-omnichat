# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JSON files (including templates)
[*.{json,json.template}]
indent_style = space
indent_size = 2

# YAML files (including templates)
[*.{yml,yaml,yaml.template}]
indent_style = space
indent_size = 2

# Terraform files
[*.tf]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
