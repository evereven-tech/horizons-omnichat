# AWS Region
aws_region         = "eu-west-1"
aws_region_bedrock = "us-east-1"

# Networking
vpc_cidr           = "x.x.x.x/16"
availability_zones = ["**-**-1a", "**-****-1b"]
private_subnets    = ["x.x.x.x/24", "x.x.x.x/24"]
public_subnets     = ["x.x.x.x/24", "x.x.x.x/24"]

# SSL Certificate
certificate_arn = "arn:aws:acm:*:*****************:certificate/********-****-****-****-************"

# Domain Configuration
domain_name           = "chatbot.your-site.company"
cognito_domain_prefix = "auth-chatbot-company_name"

# Open WebUI
postgres_password  = "changemeinproduction"
webui_secret_key   = "changemeinproduction"
bedrock_api_key    = 123456
webui_version      = "0.5.10"

# Ollama Configuration
ollama_models = "tinyllama,llama2,mistral"

# WebUI Configuration (optional fields)
webui_user_permissions = {
  workspace = {
    models     = true
    knowledge  = true
    prompts    = true
    tools      = true
  }
  chat = {
    controls     = true
    file_upload  = true
    delete       = true
    edit         = true
    temporary    = true
  }
  features = {
    web_search        = true
    image_generation  = true
    code_interpreter  = true
  }
}

webui_auth_config = {
  admin = {
    show = true
  }
  api_key = {
    enable                = true
    endpoint_restrictions = false
    allowed_endpoints     = ""
  }
  jwt_expiry = "1d"
}

webui_ldap_enabled    = false
webui_channels_enabled = false
gpu_config = {
  instance_types = ["g4dn.xlarge", "g5.xlarge", "p3.2xlarge"]
  min_gpus       = 1
  max_gpus       = 4
}

spot_config = {
  spot_price = {
    "g4dn.xlarge" = "0.50"
    "g5.xlarge"   = "0.60"
    "p3.2xlarge"  = "1.00"
  }
  interruption_behavior = "terminate"
  allocation_strategy   = "capacity-optimized-prioritized"
}
