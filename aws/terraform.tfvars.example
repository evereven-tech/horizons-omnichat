# AWS Region
aws_region         = "eu-west-1"
aws_region_bedrock = "us-west-2"

# Networking
vpc_cidr           = "x.x.x.x/16"
availability_zones = ["**-**-1a", "**-****-1b"]
private_subnets    = ["x.x.x.x/24", "x.x.x.x/24"]
public_subnets     = ["x.x.x.x/24", "x.x.x.x/24"]

# SSL Certificate
certificate_arn = "arn:aws:acm:*:*****************:certificate/********-****-****-****-************"

# Domain Configuration
domain_name           = "chatbot.your-site.company"
cognito_domain_prefix = "auth-chatbot-company_name"

# Open WebUI
#postgres_password  = "changemeinproduction"
#bedrock_api_key    = 123456
#webui_secret_key   = "changemeinproduction"
webui_version      = "v0.6.10"

# Ollama Configuration
ollama_models = "tinyllama,llama2,mistral"

# Network Optimization (optional)
# Configure NAT Gateway setup
nat_gateway_config = {
  enabled    = true   # Set to false to disable NAT Gateway entirely
  single_nat = true   # true = single NAT (cost-optimized), false = one per AZ (HA)
}

# VPC Endpoints (optional)
# Set to true to enable VPC endpoints for private communication
vpc_endpoints_enabled = false  # Default to minimal setup

# GPU Configuration
# Set to true if you want to deploy a spot GPU instance with Ollama 
enable_gpu = true

# Ollama Compute Environment
gpu_config = {
  instance_types = ["g4dn.xlarge", "g5.xlarge", "p3.2xlarge"]
  min_gpus       = 1
  max_gpus       = 4
}

spot_config = {
  interruption_behavior = "terminate"
  allocation_strategy   = "capacity-optimized-prioritized"
}

# Budget Configuration
budget_notification_emails = ["someone@your-company.com"]
budget_notification_thresholds = [25, 50, 75, 100, 125, 150]
platform_budget_limit      = "200"
marketplace_budget_limit    = "100"
